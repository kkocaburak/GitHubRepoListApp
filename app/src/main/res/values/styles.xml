<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BlackText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BlackText.Large" parent="BlackText">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="BlackText.ExtraLarge" parent="BlackText">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
    </style>

    <style name="BoldText" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BoldText.White" parent="BoldText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BoldText.White.Large" parent="BoldText.White">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

</resources>